<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.charminseok.company.mapper.CompanyMapper">
    <resultMap id="companyMap" type="com.charminseok.company.domain.CompanyDomain">
        <id column="COMPANY_ID" property="companyId"/>
    </resultMap>

    <select id="selectCompanyByCompanyId" resultMap="companyMap">
        SELECT *
        FROM Company
        WHERE COMPANY_ID = #{companyId}
    </select>

    <select id="selectCompanyByCompanyName" resultMap="companyMap">
        SELECT *
        FROM Company
        WHERE COMPANY_NAME = #{companyName}
    </select>

    <insert id="insertCompany" keyProperty="companyId" keyColumn="COMPANY_ID" useGeneratedKeys="true" parameterType="com.charminseok.company.dto.CompanyInsertDto">
        INSERT INTO Company (company_name, company_business_number, company_tel, company_address)
        values ( #{companyName}
               , #{companyBusinessNumber}
               , #{companyTel}
               , #{companyAddress});
    </insert>

    <update id="updateCompany" parameterType="com.charminseok.company.domain.CompanyDomain">
        UPDATE COMPANY
        SET
        <trim prefixOverrides=",">
            <if test="companyBusinessNumber">
                , COMPANY_BUSINESS_NUMBER = #{companyBusinessNumber}
            </if>
            <if test="companyTel">
                , COMPANY_TEL = #{companyTel}
            </if>
            <if test="companyAddress">
                , COMPANY_ADDRESS = #{companyAddress}
            </if>
        </trim>
        WHERE COMPANY_ID = #{companyId}
    </update>
</mapper>
